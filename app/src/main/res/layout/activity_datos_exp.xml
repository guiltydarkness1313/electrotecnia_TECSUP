<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Tabs-->
    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/TabWidgetTheme"
        android:id="@+id/tabhost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryDark" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Voltios (V)"
                                    android:layout_width="106dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="#000"
                                    android:id="@+id/txt1" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number|numberSigned|numberDecimal"
                                    android:ems="10"
                                    android:id="@+id/editV1"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:drawableLeft="@drawable/grafi2"
                                android:id="@+id/btnX1"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Agrega X"
                                android:onClick="AgregaX1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Amperios (I)"
                                    android:textColor="#000"
                                    android:layout_width="119dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:id="@+id/txt2" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number|numberSigned|numberDecimal"
                                    android:ems="10"
                                    android:id="@+id/editI1"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:id="@+id/btnY1"
                                android:drawableLeft="@drawable/grafi2"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Agrega Y"
                                android:onClick="AgregaY1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/glasses"
                                android:drawablePadding="8dp"
                                android:id="@+id/btngrafico1"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="ver grafico"
                                android:onClick="pass1"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <Button
                                android:layout_width="match_parent"
                                android:drawableLeft="@drawable/eraser"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:id="@+id/btnLimpiar1"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Limpiar Datos"
                                android:onClick="LimpiarXY"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Amperios (I)"
                                    android:layout_width="106dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="#000"
                                    android:id="@+id/txt3" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number|numberSigned|numberDecimal"
                                    android:ems="10"
                                    android:id="@+id/editV2"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:drawableLeft="@drawable/grafi2"
                                android:id="@+id/btnX2"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Agrega X"
                                android:onClick="AgregaX2"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Ohmios (R)"
                                    android:textColor="#000"
                                    android:layout_width="119dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:id="@+id/txt4" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number|numberSigned|numberDecimal"
                                    android:ems="10"
                                    android:id="@+id/editI2"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:id="@+id/btnY2"
                                android:drawableLeft="@drawable/grafi2"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Agrega Y"
                                android:onClick="AgregaY2"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/glasses"
                                android:drawablePadding="8dp"
                                android:id="@+id/btngrafico2"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="ver grafico"
                                android:onClick="pass2"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                            <Button
                                android:layout_width="match_parent"
                                android:drawableLeft="@drawable/eraser"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:id="@+id/btnlimpiar2"
                                android:textColor="@android:color/white"
                                android:backgroundTint="#2daf33"
                                android:text="Limpiar Datos"
                                android:onClick="LimpiarXY"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1" />

                        </LinearLayout>
                    </ScrollView>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
