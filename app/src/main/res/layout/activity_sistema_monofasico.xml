<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shibuyaxpress.electrotecniatecsup.SistemaMonofasicoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Sistema Monofasico"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Descabalanceado"
                    android:fontFamily="monospace"
                    android:textSize="28dp"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:textColor="#000" />
            </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Voltios (V)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:id="@+id/textView10"
                        android:layout_weight="1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberSigned|numberDecimal"
                        android:ems="10"
                        android:id="@+id/txtA2" />
                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Impedancia (Z)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:id="@+id/textView11"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberSigned|numberDecimal"
                    android:ems="10"
                    android:id="@+id/txtZ2" />
            </LinearLayout>
            <Button
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/equal"
                android:drawablePadding="8dp"
                android:id="@+id/btnCalcular"
                android:onClick="Calcular"
                android:textColor="@android:color/white"
                android:backgroundTint="#f2bb3a"
                android:text="CALCULAR"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Resultado"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/textView13"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtC2" />
            </LinearLayout>

            <Button
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/grafi2"
                android:id="@+id/btnAddX"
                android:textColor="@android:color/white"
                android:backgroundTint="#f2bb3a"
                android:text="Agrega X"
                android:onClick="AgregaX"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:id="@+id/btnAddY"
                android:drawableLeft="@drawable/grafi2"
                android:textColor="@android:color/white"
                android:backgroundTint="#f2bb3a"
                android:text="Agrega Y"
                android:onClick="AgregaY"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/glasses"
                android:drawablePadding="8dp"
                android:id="@+id/btnGrafico"
                android:textColor="@android:color/white"
                android:backgroundTint="#f2bb3a"
                android:text="ver grafico"
                android:onClick="Pass"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="1dp" />

            <Button
                android:layout_width="307dp"
                android:drawableLeft="@drawable/eraser"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:id="@+id/btnLimpia"
                android:textColor="@android:color/white"
                android:backgroundTint="#f2bb3a"
                android:text="Limpiar Datos"
                android:onClick="Limpiar"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
